<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/homeDrawerLayout"
    android:background="@color/background_color"
    tools:context=".presentation.feature.home.HomeFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cons_drawer"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:background="@drawable/rounded_corner_drawer"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:paddingVertical="40dp"
        tools:ignore="RtlSymmetry">

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_icon_user"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:backgroundTint="@color/button_color"
            app:cardCornerRadius="90dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="A"
                android:gravity="center"
                android:textColor="@color/text_color"
                android:fontFamily="@font/poppins_semibold"/>

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tv_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Joko Widodo"
            android:textSize="18sp"
            android:layout_marginStart="10dp"
            android:fontFamily="@font/poppins_semibold"
            app:layout_constraintStart_toEndOf="@+id/cv_icon_user"
            app:layout_constraintTop_toTopOf="@+id/cv_icon_user"/>

        <TextView
            android:id="@+id/tv_datetime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="30 September 2024"
            android:textSize="12sp"
            android:layout_marginStart="10dp"
            android:fontFamily="@font/poppins"
            app:layout_constraintStart_toEndOf="@+id/cv_icon_user"
            app:layout_constraintTop_toBottomOf="@+id/tv_username"/>

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/power"
            android:layout_marginEnd="10dp"
            app:layout_constraintEnd_toStartOf="@id/tv_logout"
            app:layout_constraintTop_toTopOf="@id/tv_logout"
            app:layout_constraintBottom_toBottomOf="@id/tv_logout"/>

        <TextView
            android:id="@+id/tv_logout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Logout"
            android:textSize="16sp"
            android:fontFamily="@font/poppins"
            android:textColor="@color/button_red"
            android:textAlignment="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Search Bar -->
    <EditText
        android:id="@+id/search_bar"
        android:layout_width="500dp"
        android:layout_height="50dp"
        android:backgroundTint="@color/white"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:queryHint="Search..."
        android:paddingHorizontal="20dp"
        android:background="@drawable/rounded_corner_search"
        app:layout_constraintStart_toEndOf="@+id/cons_drawer"
        app:layout_constraintTop_toTopOf="parent"
        app:titleTextColor="@color/text_color"
        app:subtitleTextColor="@color/background_color"
        android:hint="Search..." />

    <com.google.android.material.chip.ChipGroup
        android:id="@+id/chipGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:singleLine="true"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="@+id/search_bar"
        app:layout_constraintTop_toBottomOf="@+id/search_bar"
        >

        <com.google.android.material.chip.Chip
            android:id="@+id/chip_all"
            style="@style/Widget.Material3.Chip.Filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="All"/>

        <com.google.android.material.chip.Chip
            android:id="@+id/chip_bouqet"
            style="@style/Widget.Material3.Chip.Filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:text="Bouquet"/>

        <com.google.android.material.chip.Chip
            android:id="@+id/chip_bouqet_materials"
            style="@style/Widget.Material3.Chip.Filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:text="Bahan bouquet"/>

        <com.google.android.material.chip.Chip
            android:id="@+id/chip_bouqet_accesories"
            style="@style/Widget.Material3.Chip.Filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:text="Accesories "/>

    </com.google.android.material.chip.ChipGroup>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_list_product"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/chipGroup"
        app:layout_constraintEnd_toStartOf="@+id/rv_total_order"
        android:layout_marginVertical="10dp"
        app:layout_constraintTop_toBottomOf="@+id/chipGroup" />


    <TextView
        android:id="@+id/tv_order"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Order"
        android:layout_marginStart="200dp"
        android:textSize="16sp"
        android:fontFamily="@font/poppins_semibold"
        android:textColor="@color/text_color"
        app:layout_constraintStart_toEndOf="@id/search_bar"
        app:layout_constraintTop_toTopOf="@id/search_bar"/>

    <TextView
        android:id="@+id/tv_desc_order"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins"
        android:text="Total Order"
        android:textColor="@color/text_color"
        app:layout_constraintStart_toStartOf="@+id/tv_order"
        app:layout_constraintTop_toBottomOf="@+id/tv_order" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_total_order"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginVertical="10dp"
        app:layout_constraintBottom_toTopOf="@+id/cv_bills"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/cv_bills"
        app:layout_constraintTop_toBottomOf="@+id/tv_desc_order" />


    <androidx.cardview.widget.CardView
        android:id="@+id/cv_bills"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tv_desc_order">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="20dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_title_greeting">

            <TextView
                android:id="@+id/tv_subtotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="Sub Total"
                android:textColor="@color/text_color"
                android:fontFamily="@font/poppins_semibold"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/tv_result_subtotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="Rp.200.000"
                android:textColor="@color/text_color"
                android:fontFamily="@font/poppins"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/tv_discount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:layout_marginTop="10dp"
                android:text="Discount"
                android:textColor="@color/text_color"
                android:fontFamily="@font/poppins_semibold"
                app:layout_constraintTop_toBottomOf="@+id/tv_subtotal"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/tv_result_discount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="10%"
                android:textColor="@color/text_color"
                android:fontFamily="@font/poppins"
                app:layout_constraintTop_toTopOf="@+id/tv_discount"
                app:layout_constraintEnd_toEndOf="parent"/>

            <View
                android:id="@+id/divider"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="20dp"
                android:background="@color/button_color"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_discount" />


            <TextView
                android:id="@+id/tv_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:layout_marginTop="10dp"
                android:text="Total"
                android:textColor="@color/text_color"
                android:fontFamily="@font/poppins_semibold"
                app:layout_constraintTop_toBottomOf="@+id/divider"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/tv_result_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="Rp. 180.000"
                android:textColor="@color/text_color"
                android:fontFamily="@font/poppins"
                app:layout_constraintTop_toTopOf="@+id/tv_total"
                app:layout_constraintEnd_toEndOf="parent"/>

            <Button
                android:id="@+id/btn_print"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:backgroundTint="@color/button_color"
                android:fontFamily="@font/poppins_semibold"
                android:paddingHorizontal="24dp"
                android:paddingVertical="10dp"
                android:text="Print Bills"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:textColor="@color/white"
                android:textSize="14sp" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>




</androidx.constraintlayout.widget.ConstraintLayout>
