<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.PointofSales" parent="Theme.Material3.Light.NoActionBar">

        <item name="colorPrimary">@color/blue_light_secondary</item>
        <item name="colorPrimaryVariant">@color/blue_light_secondary</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue_light_secondary</item>
        <item name="colorSecondaryVariant">@color/blue_light_accent</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Tertiary colors (used by Material 3) -->
        <item name="colorTertiary">@color/blue_light_accent</item>
        <item name="colorTertiaryContainer">@color/blue_light_highlight</item>
        <item name="colorOnTertiary">@color/white</item>

        <item name="colorOnSurface">@color/black</item>
        <item name="colorOnSurfaceVariant">@color/black</item>

        <!-- Background colors -->
        <item name="colorSurface">@color/blue_light_background</item>
        <item name="colorSurfaceVariant">@color/blue_light_highlight</item>

        <!-- Background -->
        <item name="android:colorBackground">@color/blue_light_background</item>

        <!-- Disable window translucency -->
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="Theme.PointofSales" parent="Base.Theme.PointofSales" />


    <style name="successtoast">
        <item name="stTextBold">true</item>
        <item name="stColorBackground">@color/primary_green</item>
        <item name="stTextSize">14sp</item>
        <item name="stRadius">10dp</item>
        <item name="stLength">LONG</item>
        <item name="stTextColor">@color/white</item>
        <item name="stStrokeWidth">25dp</item>
    </style>

    <style name="failedtoast">
        <item name="stTextBold">true</item>
        <item name="stColorBackground">@color/button_red</item>
        <item name="stTextSize">14sp</item>
        <item name="stRadius">10dp</item>
        <item name="stLength">LONG</item>
        <item name="stTextColor">@color/white</item>
        <item name="stStrokeWidth">25dp</item>
    </style>
</resources>